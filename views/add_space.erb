<div class='heading'>
<h1>Add a Space</h1>
</div><br>


<section id="cover" class="min-vh-100">
  <div id="cover-caption">
      <div class="container" style="background-image: url('https://images.unsplash.com/photo-1531685250784-7569952593d2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1867&q=80')">
          <div class="row text-black">
              <div class="col-md-8  mx-auto text-center form p-4">
                  <div class="px-2">
                <div class='form'>
                  <form action="/spaces/<%= @user.id %>/new" class="justify-content-center" method='post'>
                        <div class="form-group ">
                          <label for="name">Name</label>
                          <input type="text" class="form-control" id="name" name="space_name">
                        </div>
                        <div class="form-group">
                          <label for="description">Description</label>
                          <textarea class="form-control" id="description" name="description" rows="5"></textarea>
                        </div>
                    <div class="form-group">
                      <label for="price">Price per Night</label>
                      <input type="text" class="form-control" id="price" name="price">
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="start_date">Available From:</label>
                        <input type="text" class="form-control" name="availability_start" id="start_date">
                      </div>
                        <div class="form-group col-md-6">
                        <label for="end_date">Available To:</label>
                        <input type="text" class="form-control" name="availability_end" id="end_date">
                      </div>
                    </div>
                    <div class='button'>
                      <button type="submit" class="bttn btn-secondary">Add Space</button>
                    </div>
                  </form>
                </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<br>
