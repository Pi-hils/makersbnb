<div class='heading'>
<h1>Add a Space</h1>
</div><br>

<div class='words'>
  <p>Welcome to MakersBnB. Hope you have a lovely stay!</p>
</div>

<section id="cover" class="min-vh-100">
  <div id="cover-caption">
      <div class="container">
          <div class="row text-black">
              <div class="col-md-8  mx-auto text-center form p-4">
                  <div class="px-2">
                <div class='form'>
                  <form action="/spaces/<%= 1 %>/new" class="justify-content-center" method='post'>
                        <div class="form-group ">
                          <label for="name">Name</label>
                          <input type="text" class="form-control" id="name" name="space_name" placeholder="">
                        </div>
                        <div class="form-group">
                          <label for="description">Description</label>
                          <textarea class="form-control" id="description" name="description" rows="5"></textarea>
                        </div>
                    <div class="form-group">
                      <label for="price">Price per Night</label>
                      <input type="text" class="form-control" id="price" name="price" placeholder="">
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label for="start_date">Available From:</label>
                        <input type="text" class="form-control" name="availability_start" id="start_date">
                      </div>
                      <div class="form-group col-md-6"> 
                        <label for="end_date">Available To:</label>
                        <input type="text" class="form-control" name="availability_end" id="end_date">
                      </div>
                    </div>
                    <div class='button'>
                      <button type="submit" class="btn btn-primary">Add Space</button>
                    </div>
                  </form>
                </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>
<br>


